{
  "artifactStructure": {
    "assets": [
      {
        "root": "public"
      }
    ],
    "hbsTemplates": [
      {
        "root": "templates",
        "pattern": "*.hbs"
      },
      {
        "root": "partials",
        "pattern": "**/*.hbs"
      }
    ]
  },
  "base_image_tag": "node-12.18",
  "dependencies": {
    "installDepsCmd": "npm install -g serve && npm install",
    "requiredFiles": [
      "package.json",
      "package-lock.json"
    ]
  },
  "buildArtifacts": {
    "build_setup_cmd": "npm install",
    "build_cmd": "npm run build"
  },
  "livePreview": {
    "serve_setup_cmd": "echo setup",
    "serve_cmd": "echo serve"
  },
  "watch_cmd": "npm run watch"
}
