{
  "artifactStructure": {
    "assets": [
      {
        "root": "public"
      }
    ],
    "hbsTemplates": [
      {
        "root": "templates",
        "pattern": "*.hbs"
      },
      {
        "root": "partials",
        "pattern": "**/*.hbs"
      }
    ]
  },
  "base_image_tag": "node-12.18",
  "dependencies": {
    "installDepsCmd": "./ci/install_deps.sh",
    "requiredFiles": [
      "package.json",
      "package-lock.json"
    ]
  },
  "buildArtifacts": {
    "build_setup_cmd": "./ci/build_setup.sh",
    "build_cmd": "./ci/build.sh"
  },
  "livePreview": {
    "serve_setup_cmd": "./ci/serve_setup.sh",
    "serve_cmd": "./ci/serve.sh"
  },
  "watch_cmd": "npm run watch"
}
